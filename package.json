{
	"dependencies": {
		"@apiture/openapi-down-convert": "^0.9.0",
		"@cfworker/json-schema": "^1.12.7",
		"@redocly/cli": "^1.6.0",
		"oatts": "^1.6.0",
		"openapi-types": "^12.1.3",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.23.3",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.0",
		"@types/uuid": "^9.0.7",
		"axios": "^1.6.5",
		"jest": "^29.7.0",
		"jest-openapi": "^0.14.2",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths-jest": "^0.0.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"main": "./src/index.ts",
	"name": "@mearman/openalex-api-spec",
	"packageManager": "yarn@4.0.2",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Mearman/openalex-api-spec.git"
	},
	"scripts": {
		"build": "wireit",
		"convert:markdown:notebook": "wireit",
		"generate": "wireit",
		"generate:code": "wireit",
		"generate:spec": "wireit",
		"refactor": "tsc . && npx -y openapi-refactorer -i 'openapi-spec - JSON.json' -o main.json",
		"test": "wireit",
		"test:report": "wireit"
	},
	"version": "0.0.4-3",
	"wireit": {
		"build": {
			"command": "tsc --noEmit",
			"files": [
				"./src/**/*.ts",
				"openapitools.json"
			]
		},
		"convert:markdown:notebook": {
			"command": "tsx src/util/markdown2notebook.ts generated/clients/python/README.md generated/clients/python/README.ipynb",
			"dependencies": [
				"generate:code"
			],
			"files": [
				"generated/clients/python/README.md",
				"src/util/markdown2notebook.ts"
			],
			"output": [
				"generated/clients/python/README.md generated/clients/python/README.ipynb"
			]
		},
		"generate": {
			"dependencies": [
				"build",
				"generate:spec",
				"generate:code",
				"convert:markdown:notebook"
			]
		},
		"generate:code": {
			"command": "npx -y @openapitools/openapi-generator-cli generate",
			"dependencies": [
				"generate:spec",
				"build"
			],
			"files": [
				"./src/**/*.ts"
			]
		},
		"generate:spec": {
			"command": "npx -y tsx ./src/index.ts",
			"dependencies": [
				"build"
			],
			"files": [
				"./src/**/*.ts"
			],
			"output": [
				"./generated/*.json"
			]
		},
		"test": {
			"command": "jest",
			"dependencies": [
				"generate:spec"
			],
			"files": [
				"./src/**/*.ts",
				"__tests__/**/*.ts"
			]
		},
		"test:report": {
			"command": "npm run test -- --json --outputFile=jest.report.json",
			"dependencies": [
				"generate:spec"
			],
			"output": [
				"./jest.report.json"
			]
		}
	}
}
