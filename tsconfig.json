{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": {
			"~/*": [
				"./*",
				"./*/index"
			]
		},
		"resolveJsonModule": true,
		"rootDir": "./",
		"target": "ESNext"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
	]
}
